<odoo>
    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="technortal_hms_root" name="Hotel Management System">
        <!-- This Menu Item Must have a parent -->
        <menuitem id="configuration_category" name="Configuration" sequence="1">
            <!-- This Menu Item must have a parent and an action -->
            <menuitem id="hms_hotel_category" name="Hotels"
                      sequence="1"
                      action="technortal_hms.hms_hotel_action"/>
            <menuitem id="hms_hotel2_category" name="Hotels 2"
                      sequence="0"
                      action="technortal_hms.hms_hotel_action"/>
        </menuitem>
        <menuitem id="hms_room_category" name="Rooms"
                  sequence="0"
                  action="technortal_hms.hms_hotel_action"/>
    </menuitem>

    <menuitem id="hms_room2_category" name="Rooms 2"
              parent="technortal_hms.technortal_hms_root"
              sequence="3"
              action="technortal_hms.hms_hotel_action"/>
